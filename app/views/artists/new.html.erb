<h1>New Artist</h1>

<% if flash[:super_sweet_errors] %>
  <% flash[:super_sweet_errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @artist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.submit %>
<% end %>